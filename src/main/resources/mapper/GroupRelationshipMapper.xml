<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bank.creditquota.mapper.GroupRelationshipMapper">
    <resultMap id="GroupRelationshipResultMap" type="com.bank.creditquota.entity.GroupRelationship">
        <id property="id" column="id"/>
        <result property="parentCustomerId" column="parent_customer_id"/>
        <result property="childCustomerId" column="child_customer_id"/>
        <result property="relationshipType" column="relationship_type"/>
        <result property="controlRatio" column="control_ratio"/>
        <result property="relationshipDesc" column="relationship_desc"/>
        <result property="effectiveDate" column="effective_date"/>
        <result property="expireDate" column="expire_date"/>
        <result property="status" column="status"/>
        <result property="createdBy" column="created_by"/>
        <result property="createdTime" column="created_time"/>
        <result property="updatedBy" column="updated_by"/>
        <result property="updatedTime" column="updated_time"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, parent_customer_id, child_customer_id, relationship_type, control_ratio,
        relationship_desc, effective_date, expire_date, status, created_by, created_time, 
        updated_by, updated_time
    </sql>

    <insert id="insert" parameterType="com.bank.creditquota.entity.GroupRelationship">
        INSERT INTO t_group_relationship (
            parent_customer_id, child_customer_id, relationship_type, control_ratio,
            relationship_desc, effective_date, expire_date, status, created_by, updated_by
        ) VALUES (
            #{parentCustomerId}, #{childCustomerId}, #{relationshipType}, #{controlRatio},
            #{relationshipDesc}, #{effectiveDate}, #{expireDate}, #{status}, #{createdBy}, #{updatedBy}
        )
    </insert>

    <update id="updateById" parameterType="com.bank.creditquota.entity.GroupRelationship">
        UPDATE t_group_relationship
        <set>
            <if test="parentCustomerId != null">
                parent_customer_id = #{parentCustomerId},
            </if>
            <if test="childCustomerId != null">
                child_customer_id = #{childCustomerId},
            </if>
            <if test="relationshipType != null">
                relationship_type = #{relationshipType},
            </if>
            <if test="controlRatio != null">
                control_ratio = #{controlRatio},
            </if>
            <if test="relationshipDesc != null">
                relationship_desc = #{relationshipDesc},
            </if>
            <if test="effectiveDate != null">
                effective_date = #{effectiveDate},
            </if>
            <if test="expireDate != null">
                expire_date = #{expireDate},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="updatedBy != null">
                updated_by = #{updatedBy},
            </if>
            updated_time = NOW()
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM t_group_relationship WHERE id = #{id}
    </delete>

    <select id="selectById" parameterType="java.lang.Long" resultMap="GroupRelationshipResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM t_group_relationship
        WHERE id = #{id}
    </select>

    <select id="selectAll" resultMap="GroupRelationshipResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM t_group_relationship
        ORDER BY created_time DESC
    </select>

    <select id="selectByParentCustomerId" parameterType="java.lang.String" resultMap="GroupRelationshipResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM t_group_relationship
        WHERE parent_customer_id = #{parentCustomerId}
        ORDER BY created_time DESC
    </select>

    <select id="selectByChildCustomerId" parameterType="java.lang.String" resultMap="GroupRelationshipResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM t_group_relationship
        WHERE child_customer_id = #{childCustomerId}
        ORDER BY created_time DESC
    </select>

    <select id="selectByRelationshipType" parameterType="java.lang.String" resultMap="GroupRelationshipResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM t_group_relationship
        WHERE relationship_type = #{relationshipType}
        ORDER BY created_time DESC
    </select>

    <select id="selectByStatus" parameterType="java.lang.String" resultMap="GroupRelationshipResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM t_group_relationship
        WHERE status = #{status}
        ORDER BY created_time DESC
    </select>
</mapper>