<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bank.creditquota.mapper.CustomerAffiliateMapper">
    <resultMap id="CustomerAffiliateResultMap" type="com.bank.creditquota.entity.CustomerAffiliate">
        <id property="id" column="id"/>
        <result property="customerId" column="customer_id"/>
        <result property="affiliateType" column="affiliate_type"/>
        <result property="affiliateId" column="affiliate_id"/>
        <result property="affiliateName" column="affiliate_name"/>
        <result property="affiliateIdentity" column="affiliate_identity"/>
        <result property="relationshipDesc" column="relationship_desc"/>
        <result property="relationshipRatio" column="relationship_ratio"/>
        <result property="status" column="status"/>
        <result property="createdBy" column="created_by"/>
        <result property="createdTime" column="created_time"/>
        <result property="updatedBy" column="updated_by"/>
        <result property="updatedTime" column="updated_time"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, customer_id, affiliate_type, affiliate_id, affiliate_name, affiliate_identity,
        relationship_desc, relationship_ratio, status, created_by, created_time,
        updated_by, updated_time
    </sql>

    <insert id="insert" parameterType="com.bank.creditquota.entity.CustomerAffiliate">
        INSERT INTO t_customer_affiliate (
            customer_id, affiliate_type, affiliate_id, affiliate_name, affiliate_identity,
            relationship_desc, relationship_ratio, status, created_by, updated_by
        ) VALUES (
            #{customerId}, #{affiliateType}, #{affiliateId}, #{affiliateName}, #{affiliateIdentity},
            #{relationshipDesc}, #{relationshipRatio}, #{status}, #{createdBy}, #{updatedBy}
        )
    </insert>

    <update id="updateById" parameterType="com.bank.creditquota.entity.CustomerAffiliate">
        UPDATE t_customer_affiliate
        <set>
            <if test="customerId != null">
                customer_id = #{customerId},
            </if>
            <if test="affiliateType != null">
                affiliate_type = #{affiliateType},
            </if>
            <if test="affiliateId != null">
                affiliate_id = #{affiliateId},
            </if>
            <if test="affiliateName != null">
                affiliate_name = #{affiliateName},
            </if>
            <if test="affiliateIdentity != null">
                affiliate_identity = #{affiliateIdentity},
            </if>
            <if test="relationshipDesc != null">
                relationship_desc = #{relationshipDesc},
            </if>
            <if test="relationshipRatio != null">
                relationship_ratio = #{relationshipRatio},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="updatedBy != null">
                updated_by = #{updatedBy},
            </if>
            updated_time = NOW()
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM t_customer_affiliate WHERE id = #{id}
    </delete>

    <select id="selectById" parameterType="java.lang.Long" resultMap="CustomerAffiliateResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM t_customer_affiliate
        WHERE id = #{id}
    </select>

    <select id="selectAll" resultMap="CustomerAffiliateResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM t_customer_affiliate
        ORDER BY created_time DESC
    </select>

    <select id="selectByCustomerId" parameterType="java.lang.String" resultMap="CustomerAffiliateResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM t_customer_affiliate
        WHERE customer_id = #{customerId}
        ORDER BY created_time DESC
    </select>

    <select id="selectByAffiliateId" parameterType="java.lang.String" resultMap="CustomerAffiliateResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM t_customer_affiliate
        WHERE affiliate_id = #{affiliateId}
        ORDER BY created_time DESC
    </select>

    <select id="selectByAffiliateType" parameterType="java.lang.String" resultMap="CustomerAffiliateResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM t_customer_affiliate
        WHERE affiliate_type = #{affiliateType}
        ORDER BY created_time DESC
    </select>
</mapper>